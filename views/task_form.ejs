<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css"
    />
    <title>Document</title>
  </head>
  <body>
    <%- include("../components/TopNav.html") %>

    <div class="container py-5" style="max-width: 480px">
      <form
        id="form-newTask"
        action="/api/tasks<%= createMode ? '' : `/${task._id}?_method=PATCH` %>"
        method="POST"
      >
        <div class="form-group">
          <label for="input-task">Task</label>
          <input
            id="input-task"
            class="form-control"
            name="taskName"
            required
            autofocus
            value="<%= createMode ? '' : task.name %>"
          />
        </div>

        <% let now = new Date() %>
        <div class="form-group">
          <label for="input-dueDate">Due by</label>
          <div class="row">
            <div class="col-6 pr-2">
              <div class="input-group">
                <input
                  id="input-dueDate"
                  class="form-control"
                  name="taskDueDate"
                  type="date"
                  required
                  value="<%= formatInputDate(createMode ? now : new Date(task.dueDate)) %>"
                />
              </div>
            </div>
            <div class="col-3 px-2">
              <input
                id="input-dueHour"
                class="form-control"
                placeholder="Hrs."
                value="<%= (createMode ? now : new Date(task.dueDate)).getHours()  %>"
                name="taskDueHour"
                min="0"
                max="23"
                type="number"
              />
            </div>
            <div class="col-3 pl-2">
              <input
                id="input-dueMinute"
                class="form-control"
                placeholder="Min."
                value="<%= (createMode ? now : new Date(task.dueDate)).getMinutes() %>"
                name="taskDueMinute"
                min="0"
                max="59"
                type="number"
              />
            </div>
          </div>
        </div>

        <div class="form-group">
          <button
            id="button-submit"
            type="submit"
            class="btn btn-success btn-block"
          >
            <%= createMode ? "Add" : "Edit" %>
          </button>
        </div>
      </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script>
      $("input[type='number']")
        .keypress((e) => {
          if (e.key == "Enter") return;
          if (isNaN(parseInt(e.key))) e.preventDefault();
        })
        .keyup((e) => {
          const target = $(e.target);
          const max = target.attr("id") === "input-dueHour" ? 23 : 59;
          if (target.val() > max) target.val(max);
          if (target.val() < 0) target.val(0);
        });

      const dueDateInput = $("input#input-dueDate");
      if (!dueDateInput.attr("value")) dueDateInput.attr("value", parseNow());

      function parseNow() {
        const date = new Date();
        const year = date.getFullYear();
        const month = (date.getMonth() + 1).toString().padStart(2, "0");
        const day = date.getDay().toString().padStart(2, "0");

        return `${year}-${month}-${day}`;
      }
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
